@model WebBG.ViewModels.UserViewModel

<div class="card-body bg-white">
    <form class="form-horizontal">
        <div class="form-group row">
            <label class="col-md-4 control-label">Tên đăng nhập:</label>
            <div class="col-md-8">
                <input type="text" class="form-control" asp-for="Register.Username" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 control-label">Họ và tên:</label>
            <div class="col-md-8">
                <input type="text" class="form-control" asp-for="Register.FullName" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 control-label">Địa chỉ:</label>
            <div class="col-md-8">
                <input type="text" class="form-control" asp-for="Register.Address" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 control-label">Email:</label>
            <div class="col-md-8">
                <input type="text" class="form-control" asp-for="Register.Email" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 control-label">Số điện thoại:</label>
            <div class="col-md-8">
                <input type="text" class="form-control" asp-for="Register.Phone" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12 text-center">
                <a class="btn btn-primary" href="@Url.Action("Update", "User")">Cập nhật thông tin</a>
                <a class="btn btn-primary" href="@Url.Action("ChangePassword", "User")">Đổi mật khẩu</a>
            </div>
        </div>
    </form>
</div>   