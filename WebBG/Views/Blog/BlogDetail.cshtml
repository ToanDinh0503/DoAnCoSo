@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
<div class="container-fluid">
    @foreach (var blog in Model.Blogs)
    {
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center" style="color:red">@blog.Title</h2>
                <br>
                <img src="@blog.Image" class="img-fluid mx-auto d-block" alt="@blog.Title">
                <div class="content" style="white-space: pre-line; text-indent: 1.5em;">
                    @Html.Raw(blog.Content)
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-10">
            <h3 class="text-center">Bình luận</h3>
            <form method="post" action="/Blog/AddComment">
                <div class="form-group">
                    <label for="comment">Comment:</label>
                    <textarea class="form-control" id="comment" name="comment"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Đăng</button>
            </form>
        </div>
    </div>
</div>
